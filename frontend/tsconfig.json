{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node", "vite/client"],
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src", "src/shims-vue.d.ts"],
  "vueCompilerOptions": {
    "globalTypesPath": "./src/shims-vue.d.ts"
  }
}


